<!doctype html>
<html>
<head><% include partials/head.ejs %></head>

<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-3 col-md-3 sm-hidden xs-hidden"></div>
			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<div class="page-header">
								
				  	<h1><%= title %><br><small> A simple web app to sort your students into groups.</small></h1>
				</div>  
				<div class="jumbotron">

					<h2>Login</h2>

					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>

					<!-- LOGIN FORM -->
					<form action="/login" method="post">
						<div class="form-group">
							<label>Username</label>
							<input type="text" class="form-control" name="username">
						</div>
						<div class="form-group">
							<label>Password</label>
							<input type="password" class="form-control" name="password">
						</div>

						<button type="submit" class="btn btn-default">Login</button>
					</form>

					<hr>

					<p>Need an account? <a href="/signup">Signup</a> <br> Or go <a href="/">home</a>.</p>
				</div>
			</div>
			<div class="col-lg-3 col-md-3 sm-hidden xs-hidden"></div>


		</div>
	</div>
</body>
</html>